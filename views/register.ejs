<%- include('partials/header') %>

    <body class="min-h-screen flex items-center justify-center bg-gradient-to-r from-pink-50 via-white to-pink-100">

        <div class="w-full max-w-md bg-white rounded-2xl shadow-xl p-8 space-y-6 border border-gray-200">
            <h1 class="text-3xl font-bold text-center text-pink-600">Join AnnapurnaHub</h1>
            <h2 class="text-center text-gray-600">Create a new account</h2>

            <!-- âœ… Register Form (name, username, password, role) -->
            <form action="/register" method="POST" class="space-y-4">
                <div>
                    <label class="block text-gray-700 font-medium mb-1" for="name">Full Name</label>
                    <input type="text" name="name" id="name" required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-300">
                </div>
                <div>
                    <label class="block text-gray-700 font-medium mb-1" for="username">Email Address</label>
                    <input type="email" name="username" id="username" required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-300">
                </div>
                <div>
                    <label class="block text-gray-700 font-medium mb-1" for="password">Password</label>
                    <input type="password" name="password" id="password" required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-300">
                </div>

                <!-- Profile-based Registration Option -->
                <div>
                    <label class="block text-gray-700 font-medium mb-1" for="role">I am a</label>
                    <select name="role" id="role" required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-300">
                        <option value="donor">Donor</option>
                        <option value="ngo">NGO</option>
                    </select>
                </div>

                <button type="submit"
                    class="w-full bg-pink-600 hover:bg-pink-700 text-white font-semibold py-2 rounded-lg transition">
                    Register
                </button>
            </form>

            <!-- Social Register -->
            <div class="flex items-center justify-center space-x-2 text-gray-500">
                <span class="text-sm">or continue with</span>
            </div>
            <div class="flex flex-col space-y-2">
                <a href="/auth/google"
                    class="flex items-center justify-center w-full border border-gray-300 rounded-lg py-2 hover:bg-gray-50 transition">
                    <img src="/images/google-icon.png" alt="Google" class="h-5 w-5 mr-2"> Continue with Google
                </a>
                <a href="/auth/facebook"
                    class="flex items-center justify-center w-full border border-gray-300 rounded-lg py-2 hover:bg-gray-50 transition">
                    <img src="/images/facebook-icon.png" alt="Facebook" class="h-5 w-5 mr-2"> Continue with Facebook
                </a>
            </div>

            <!-- Login link -->
            <p class="text-center text-sm text-gray-600 pt-4">
                Already have an account?
                <a href="/login" class="text-pink-600 font-semibold hover:underline">Login here</a>
            </p>
        </div>

        <%- include('partials/footer') %>