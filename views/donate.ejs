<%- include('partials/header') %>

    <body class="bg-gray-50">

        <!-- Navbar -->
        <nav class="bg-green-600 text-white p-4 flex justify-between items-center">
            <h1 class="text-2xl font-bold">AnnapurnaHub</h1>
            <div>
                <a href="/dashboard" class="bg-white text-green-700 px-4 py-2 rounded hover:bg-gray-200">Back to
                    Dashboard</a>
            </div>
        </nav>

        <!-- Donation Form -->
        <div class="flex justify-center items-center min-h-screen p-6">
            <div class="bg-white p-10 rounded-xl shadow-md w-full max-w-md">

                <h2 class="text-3xl font-bold text-center mb-8 text-green-700">Donate Food</h2>

                <form action="/donate" method="POST" class="space-y-6">

                    <!-- Food Type -->
                    <div>
                        <label class="block mb-1 text-gray-700 font-semibold" for="foodType">Food Type</label>
                        <input type="text" id="foodType" name="foodType" placeholder="e.g. Rice, Fruits, Packaged Meals"
                            required
                            class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-300">
                    </div>

                    <!-- Quantity -->
                    <div>
                        <label class="block mb-1 text-gray-700 font-semibold" for="quantity">Quantity (in
                            kg/units)</label>
                        <input type="number" id="quantity" name="quantity" min="1" placeholder="e.g. 50" required
                            class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-300">
                    </div>

                    <!-- Expiry Time -->
                    <div>
                        <label class="block mb-1 text-gray-700 font-semibold" for="expiry">Best Before (Hours)</label>
                        <input type="number" id="expiry" name="expiry" min="1" placeholder="e.g. 5" required
                            class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-300">
                        <p class="text-xs text-gray-500 mt-1">How many hours before food expires?</p>
                    </div>

                    <!-- Pickup Location -->
                    <div>
                        <label class="block mb-1 text-gray-700 font-semibold" for="location">Pickup Location</label>
                        <textarea id="location" name="location" placeholder="Enter pickup address..." rows="3" required
                            class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-300"></textarea>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit"
                        class="w-full bg-green-600 hover:bg-green-700 text-white py-3 rounded-xl font-bold text-lg transition">
                        Submit Donation
                    </button>

                </form>

            </div>
        </div>

    </body>
    <%- include('partials/footer') %>