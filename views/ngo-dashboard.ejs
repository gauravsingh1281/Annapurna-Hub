<%- include('partials/header') %>

    <body class="bg-gray-50">

        <!-- Navbar -->
        <nav class="bg-green-600 text-white p-4 flex justify-between items-center">
            <h1 class="text-2xl font-bold">AnnapurnaHub - NGO Dashboard</h1>
            <div>
                <span class="mr-4">Welcome, <%= user.name %></span>
                <a href="/logout" class="bg-white text-green-700 px-4 py-2 rounded hover:bg-gray-200">Logout</a>
            </div>
        </nav>

        <!-- Main Section -->
        <div class="p-6">
            <h2 class="text-2xl font-bold text-green-700 mb-4">Available Food Donations</h2>

            <% if (donations.length===0) { %>
                <p class="text-gray-500">No donations available.</p>
                <% } else { %>
                    <table class="w-full bg-white rounded shadow p-4 text-left">
                        <thead>
                            <tr class="border-b">
                                <th class="py-2">Food</th>
                                <th class="py-2">Quantity</th>
                                <th class="py-2">Pickup Address</th>
                                <th class="py-2">Status</th>
                                <th class="py-2">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% donations.forEach(function(donation) { %>
                                <tr class="border-b hover:bg-gray-100">
                                    <td class="py-2">
                                        <%= donation.foodType %>
                                    </td>
                                    <td class="py-2">
                                        <%= donation.quantity %>
                                    </td>
                                    <td class="py-2">
                                        <%= donation.pickupAddress %>
                                    </td>
                                    <td class="py-2">
                                        <%= donation.status %>
                                    </td>
                                    <td class="py-2">
                                        <% if (donation.status==='Pending' ) { %>
                                            <form action="/accept-donation/<%= donation._id %>" method="POST">
                                                <button type="submit"
                                                    class="bg-green-600 text-white px-4 py-1 rounded hover:bg-green-700">
                                                    Accept
                                                </button>
                                            </form>
                                            <% } else { %>
                                                <span class="text-green-600 font-semibold">Accepted</span>
                                                <% } %>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                    <% } %>
        </div>

    </body>
    <%- include('partials/footer') %>