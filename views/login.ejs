<%- include('partials/header') %>
    <body
        class="min-h-screen flex items-center justify-center bg-gradient-to-r from-[#ffffff44] via-[#f6bc919a] to-[#fe95457e]">

        <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8 space-y-6">
            <h1 class="text-3xl font-bold text-center text-[#ed7011]">Welcome to AnnapurnaHub</h1>
            <h2 class="text-center text-gray-600">Login to your account</h2>
            <form action="/login" method="POST" class="space-y-4">
                <div>

                    <label class="block text-gray-700 font-semibold mb-1" for="email">Email Address</label>
                    <input type="email" name="username" id="username" required
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-400">
                </div>
                <div>
                    <label class="block text-gray-700 font-medium mb-1" for="password">Password</label>
                    <input type="password" name="password" id="password" required
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-400">
                </div>
                <button type="submit"

                    class="w-full bg-[#FD7913] hover:bg-[#fd7813e2] text-white font-bold py-2 rounded-lg transition">
                    Login
                </button>
            </form>


            <p class="text-center text-gray-500 text-sm">
                Don't have an account?
                <a href="/register" class="text-[#FD7913] font-semibold hover:underline">Register</a>
            </p>
        </div>

        <%- include('partials/footer') %>